// cancel anymods and layers, please! The PANIC BUTTON!
COMB( combo_canel,   CANCEL,     KC_S, KC_I)
COMB( CMB_BOOT,      QK_BOOT,    KC_V, KC_QUOT)

// thumb combos
COMB (CMB_NUMWORD,      NUMWORD,    HM_A, OS_LSFT)
// One shot numbers
COMB( COMBO_0,      KC_0,  HM_A, KC_S)
COMB( COMBO_1,      KC_1,  HM_A, KC_T)
COMB( COMBO_2,      KC_2,  HM_A, KC_R)
COMB( COMBO_3,      KC_3,  HM_A, KC_D)
COMB( COMBO_4,      KC_4,  HM_A, KC_K)
COMB( COMBO_5,      KC_5,  HM_A, KC_J)
COMB( COMBO_6,      KC_6,  HM_A, KC_G)
COMB( COMBO_7,      KC_7,  HM_A, KC_M)
COMB( COMBO_8,      KC_8,  HM_A, KC_L)
COMB( COMBO_9,      KC_9,  HM_A, KC_C)



// COMB( combo_caps,   CAPSWORD, KC_T,    KC_A)




COMB( combo_enter,     KC_ENTER,    HM_N,  HM_E,    HM_A)
COMB( COMBO_ESC,       KC_ESC,      HM_R,  HM_D)
COMB( combo_tab,       KC_TAB,      HM_T,  HM_R, HM_D)
COMB( COMBO_COLON,     KC_COLON,    HM_N,  HM_E)
COMB( COMBO_SCOLON,    KC_SCLN,     HM_N,  KC_COMM)

// ctrl and shift
COMB( COMBO_LCTL,       OS_LCTL,      HM_T, HM_R)
COMB( COMBO_RCTL,       OS_LCTL,      HM_E, HM_A)

// Letters
COMB( COMBO_Q,          KC_Q,       KC_V, KC_M)


